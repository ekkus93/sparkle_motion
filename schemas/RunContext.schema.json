{
  "$defs": {
    "BaseImageSpec": {
      "description": "Keyframe specification shared across all shots.",
      "properties": {
        "asset_uri": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Asset Uri"
        },
        "id": {
          "title": "Id",
          "type": "string"
        },
        "local_path": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Local Path"
        },
        "metadata": {
          "additionalProperties": true,
          "title": "Metadata",
          "type": "object"
        },
        "mime_type": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Mime Type"
        },
        "prompt": {
          "title": "Prompt",
          "type": "string"
        }
      },
      "required": [
        "id",
        "prompt"
      ],
      "title": "BaseImageSpec",
      "type": "object"
    },
    "CharacterSpec": {
      "description": "Description of a character used in the movie.",
      "properties": {
        "description": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Description"
        },
        "id": {
          "title": "Id",
          "type": "string"
        },
        "name": {
          "title": "Name",
          "type": "string"
        },
        "voice_profile": {
          "additionalProperties": {
            "type": "string"
          },
          "title": "Voice Profile",
          "type": "object"
        }
      },
      "required": [
        "id",
        "name"
      ],
      "title": "CharacterSpec",
      "type": "object"
    },
    "DialogueLine": {
      "description": "Single dialogue entry attached to a shot's script.",
      "properties": {
        "character_id": {
          "title": "Character Id",
          "type": "string"
        },
        "metadata": {
          "additionalProperties": true,
          "title": "Metadata",
          "type": "object"
        },
        "text": {
          "title": "Text",
          "type": "string"
        }
      },
      "required": [
        "character_id",
        "text"
      ],
      "title": "DialogueLine",
      "type": "object"
    },
    "DialogueTimelineDialogue": {
      "properties": {
        "character_id": {
          "title": "Character Id",
          "type": "string"
        },
        "duration_sec": {
          "exclusiveMinimum": 0.0,
          "title": "Duration Sec",
          "type": "number"
        },
        "start_time_sec": {
          "minimum": 0.0,
          "title": "Start Time Sec",
          "type": "number"
        },
        "text": {
          "title": "Text",
          "type": "string"
        },
        "type": {
          "const": "dialogue",
          "default": "dialogue",
          "title": "Type",
          "type": "string"
        }
      },
      "required": [
        "start_time_sec",
        "duration_sec",
        "character_id",
        "text"
      ],
      "title": "DialogueTimelineDialogue",
      "type": "object"
    },
    "DialogueTimelineSilence": {
      "properties": {
        "duration_sec": {
          "exclusiveMinimum": 0.0,
          "title": "Duration Sec",
          "type": "number"
        },
        "start_time_sec": {
          "minimum": 0.0,
          "title": "Start Time Sec",
          "type": "number"
        },
        "type": {
          "const": "silence",
          "default": "silence",
          "title": "Type",
          "type": "string"
        }
      },
      "required": [
        "start_time_sec",
        "duration_sec"
      ],
      "title": "DialogueTimelineSilence",
      "type": "object"
    },
    "MoviePlan": {
      "description": "Top-level production plan the ScriptAgent emits.\n\nRequired fields for an orchestrator run:\n  - title\n  - base_images: ordered inventory of keyframes with len == len(shots) + 1\n  - shots: each shot must reference consecutive base image ids via\n    `start_base_image_id` / `end_base_image_id`.",
      "examples": [
        {
          "base_images": [
            {
              "id": "frame_000",
              "prompt": "Rooftop establishing"
            },
            {
              "id": "frame_001",
              "prompt": "Close on Ava"
            }
          ],
          "characters": [
            {
              "id": "c1",
              "name": "Ava"
            }
          ],
          "dialogue_timeline": [
            {
              "character_id": "c1",
              "duration_sec": 4.0,
              "start_time_sec": 0.0,
              "text": "I always loved you.",
              "type": "dialogue"
            }
          ],
          "metadata": {
            "seed": "12345"
          },
          "render_profile": {
            "metadata": {},
            "video": {
              "model_id": "wan-2.1"
            }
          },
          "shots": [
            {
              "duration_sec": 8,
              "end_base_image_id": "frame_001",
              "id": "shot_001",
              "is_talking_closeup": true,
              "motion_prompt": "A slow dolly from wide to close",
              "start_base_image_id": "frame_000",
              "visual_description": "Wide shot with neon signs"
            }
          ],
          "title": "Night Rooftop Confession"
        }
      ],
      "properties": {
        "base_images": {
          "items": {
            "$ref": "#/$defs/BaseImageSpec"
          },
          "minItems": 1,
          "title": "Base Images",
          "type": "array"
        },
        "characters": {
          "items": {
            "$ref": "#/$defs/CharacterSpec"
          },
          "title": "Characters",
          "type": "array"
        },
        "dialogue_timeline": {
          "items": {
            "discriminator": {
              "mapping": {
                "dialogue": "#/$defs/DialogueTimelineDialogue",
                "silence": "#/$defs/DialogueTimelineSilence"
              },
              "propertyName": "type"
            },
            "oneOf": [
              {
                "$ref": "#/$defs/DialogueTimelineDialogue"
              },
              {
                "$ref": "#/$defs/DialogueTimelineSilence"
              }
            ]
          },
          "minItems": 1,
          "title": "Dialogue Timeline",
          "type": "array"
        },
        "metadata": {
          "additionalProperties": {
            "type": "string"
          },
          "title": "Metadata",
          "type": "object"
        },
        "render_profile": {
          "$ref": "#/$defs/RenderProfile"
        },
        "shots": {
          "items": {
            "$ref": "#/$defs/ShotSpec"
          },
          "minItems": 1,
          "title": "Shots",
          "type": "array"
        },
        "title": {
          "title": "Title",
          "type": "string"
        }
      },
      "required": [
        "title",
        "base_images",
        "shots",
        "dialogue_timeline",
        "render_profile"
      ],
      "title": "MoviePlan",
      "type": "object"
    },
    "RenderProfile": {
      "properties": {
        "metadata": {
          "additionalProperties": true,
          "title": "Metadata",
          "type": "object"
        },
        "video": {
          "$ref": "#/$defs/RenderProfileVideo"
        }
      },
      "required": [
        "video"
      ],
      "title": "RenderProfile",
      "type": "object"
    },
    "RenderProfileVideo": {
      "properties": {
        "max_fps": {
          "anyOf": [
            {
              "exclusiveMinimum": 0.0,
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Max Fps"
        },
        "model_id": {
          "title": "Model Id",
          "type": "string"
        },
        "notes": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Notes"
        }
      },
      "required": [
        "model_id"
      ],
      "title": "RenderProfileVideo",
      "type": "object"
    },
    "ShotSpec": {
      "description": "A single shot specification used by the pipeline.",
      "properties": {
        "dialogue": {
          "items": {
            "$ref": "#/$defs/DialogueLine"
          },
          "title": "Dialogue",
          "type": "array"
        },
        "duration_sec": {
          "exclusiveMinimum": 0,
          "title": "Duration Sec",
          "type": "number"
        },
        "end_base_image_id": {
          "title": "End Base Image Id",
          "type": "string"
        },
        "id": {
          "title": "Id",
          "type": "string"
        },
        "is_talking_closeup": {
          "default": false,
          "title": "Is Talking Closeup",
          "type": "boolean"
        },
        "motion_prompt": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Motion Prompt"
        },
        "setting": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Setting"
        },
        "start_base_image_id": {
          "title": "Start Base Image Id",
          "type": "string"
        },
        "visual_description": {
          "title": "Visual Description",
          "type": "string"
        }
      },
      "required": [
        "id",
        "duration_sec",
        "visual_description",
        "start_base_image_id",
        "end_base_image_id"
      ],
      "title": "ShotSpec",
      "type": "object"
    }
  },
  "$id": "sparkle_motion/RunContext.schema.json",
  "description": "Materialized production context derived from a validated MoviePlan.",
  "properties": {
    "base_image_map": {
      "additionalProperties": {
        "type": "string"
      },
      "title": "Base Image Map",
      "type": "object"
    },
    "dialogue_timeline_uri": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Dialogue Timeline Uri"
    },
    "metadata": {
      "additionalProperties": true,
      "title": "Metadata",
      "type": "object"
    },
    "plan": {
      "$ref": "#/$defs/MoviePlan"
    },
    "plan_id": {
      "title": "Plan Id",
      "type": "string"
    },
    "plan_title": {
      "title": "Plan Title",
      "type": "string"
    },
    "render_profile": {
      "additionalProperties": true,
      "title": "Render Profile",
      "type": "object"
    },
    "run_id": {
      "title": "Run Id",
      "type": "string"
    },
    "schema_uri": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Schema Uri"
    },
    "shot_order": {
      "items": {
        "type": "string"
      },
      "title": "Shot Order",
      "type": "array"
    }
  },
  "required": [
    "run_id",
    "plan_id",
    "plan_title",
    "plan"
  ],
  "title": "RunContext",
  "type": "object"
}