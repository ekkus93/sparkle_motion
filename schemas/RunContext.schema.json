{
  "$defs": {
    "CharacterSpec": {
      "description": "Description of a character used in the movie.",
      "properties": {
        "description": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Description"
        },
        "id": {
          "title": "Id",
          "type": "string"
        },
        "name": {
          "title": "Name",
          "type": "string"
        },
        "voice_profile": {
          "additionalProperties": {
            "type": "string"
          },
          "title": "Voice Profile",
          "type": "object"
        }
      },
      "required": [
        "id",
        "name"
      ],
      "title": "CharacterSpec",
      "type": "object"
    },
    "DialogueLine": {
      "properties": {
        "character_id": {
          "title": "Character Id",
          "type": "string"
        },
        "start_time_sec": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Start Time Sec"
        },
        "text": {
          "title": "Text",
          "type": "string"
        }
      },
      "required": [
        "character_id",
        "text"
      ],
      "title": "DialogueLine",
      "type": "object"
    },
    "MoviePlan": {
      "description": "Top-level production plan the ScriptAgent emits.\n\nRequired fields for an orchestrator run:\n  - title\n  - shots: each shot must have id, duration_sec, visual_description,\n    start_frame_prompt and end_frame_prompt.",
      "examples": [
        {
          "characters": [
            {
              "id": "c1",
              "name": "Ava"
            }
          ],
          "metadata": {
            "seed": "12345"
          },
          "shots": [
            {
              "dialogue": [
                {
                  "character_id": "c1",
                  "text": "I always loved you."
                }
              ],
              "duration_sec": 8,
              "end_frame_prompt": "Same rooftop, Ava closeup...",
              "id": "shot_001",
              "is_talking_closeup": true,
              "motion_prompt": "A slow dolly from wide to close",
              "start_frame_prompt": "A neon-lit rooftop, rain...",
              "visual_description": "Wide shot with neon signs"
            }
          ],
          "title": "Night Rooftop Confession"
        }
      ],
      "properties": {
        "characters": {
          "items": {
            "$ref": "#/$defs/CharacterSpec"
          },
          "title": "Characters",
          "type": "array"
        },
        "metadata": {
          "additionalProperties": {
            "type": "string"
          },
          "title": "Metadata",
          "type": "object"
        },
        "shots": {
          "items": {
            "$ref": "#/$defs/ShotSpec"
          },
          "title": "Shots",
          "type": "array"
        },
        "title": {
          "title": "Title",
          "type": "string"
        }
      },
      "required": [
        "title"
      ],
      "title": "MoviePlan",
      "type": "object"
    },
    "ShotSpec": {
      "description": "A single shot specification used by the pipeline.",
      "properties": {
        "dialogue": {
          "items": {
            "$ref": "#/$defs/DialogueLine"
          },
          "title": "Dialogue",
          "type": "array"
        },
        "duration_sec": {
          "exclusiveMinimum": 0,
          "title": "Duration Sec",
          "type": "number"
        },
        "end_frame_prompt": {
          "title": "End Frame Prompt",
          "type": "string"
        },
        "id": {
          "title": "Id",
          "type": "string"
        },
        "is_talking_closeup": {
          "default": false,
          "title": "Is Talking Closeup",
          "type": "boolean"
        },
        "motion_prompt": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Motion Prompt"
        },
        "setting": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Setting"
        },
        "start_frame_prompt": {
          "title": "Start Frame Prompt",
          "type": "string"
        },
        "visual_description": {
          "title": "Visual Description",
          "type": "string"
        }
      },
      "required": [
        "id",
        "duration_sec",
        "visual_description",
        "start_frame_prompt",
        "end_frame_prompt"
      ],
      "title": "ShotSpec",
      "type": "object"
    }
  },
  "$id": "sparkle_motion/RunContext.schema.json",
  "description": "Materialized production context derived from a validated MoviePlan.",
  "properties": {
    "base_image_map": {
      "additionalProperties": {
        "type": "string"
      },
      "title": "Base Image Map",
      "type": "object"
    },
    "dialogue_timeline_uri": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Dialogue Timeline Uri"
    },
    "metadata": {
      "additionalProperties": true,
      "title": "Metadata",
      "type": "object"
    },
    "plan": {
      "$ref": "#/$defs/MoviePlan"
    },
    "plan_id": {
      "title": "Plan Id",
      "type": "string"
    },
    "plan_title": {
      "title": "Plan Title",
      "type": "string"
    },
    "render_profile": {
      "additionalProperties": true,
      "title": "Render Profile",
      "type": "object"
    },
    "run_id": {
      "title": "Run Id",
      "type": "string"
    },
    "schema_uri": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Schema Uri"
    },
    "shot_order": {
      "items": {
        "type": "string"
      },
      "title": "Shot Order",
      "type": "array"
    }
  },
  "required": [
    "run_id",
    "plan_id",
    "plan_title",
    "plan"
  ],
  "title": "RunContext",
  "type": "object"
}